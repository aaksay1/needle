generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider  = "postgresql"
}

model Offer {
  id String @id @default(uuid())
  productId String
  product Product @relation(fields: [productId], references: [id])
  senderId String
  sender User @relation(fields: [senderId], references: [id])
  amount Int // in cents
  message String? // optional
  status String @default("pending") // pending, accepted, rejected
  createdAt DateTime @default(now())
}

model User {
  id String @id @unique
  email String
  firstName String
  lastName String
  profileImage String

  Product Product[]
  offers   Offer[]
}

model Product {
  id String @id @default(uuid())
  name String
  price Int 
  description String
  zipCode String
  latitude    Float?
  longitude   Float?
  createdAt DateTime @default(now())

  User User? @relation(fields: [userId], references: [id])
  userId String?

  offers Offer[] 
}