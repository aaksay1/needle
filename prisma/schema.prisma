generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider  = "postgresql"
}

model User {
  id String @id @unique
  email String
  firstName String
  lastName String
  profileImage String

  Product Product[]
}

model Product {
  id String @id @default(uuid())
  name String
  price Int 
  description String
  createdAt DateTime @default(now())
  User User? @relation(fields: [userId], references: [id])
  userId String?
}