generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider  = "postgresql"
}

model Offer {
  id String @id @default(uuid())
  productId String
  product Product @relation(fields: [productId], references: [id])
  senderId String
  sender User @relation(fields: [senderId], references: [id])
  amount Int // in cents
  message String? // optional
  status String @default("pending") // pending, accepted, rejected
  createdAt DateTime @default(now())
  
  conversation Conversation?
}

model User {
  id String @id @unique
  email String
  firstName String
  lastName String
  profileImage String

  Product Product[]
  offers   Offer[]
  conversationsAsUser1 Conversation[] @relation("User1Conversations")
  conversationsAsUser2 Conversation[] @relation("User2Conversations")
  messages Message[]
}

model Product {
  id String @id @default(uuid())
  name String
  price Int 
  description String
  zipCode String
  latitude    Float?
  longitude   Float?
  createdAt DateTime @default(now())

  User User? @relation(fields: [userId], references: [id])
  userId String?

  offers Offer[] 
}

model Conversation {
  id String @id @default(uuid())
  user1Id String
  user1 User @relation("User1Conversations", fields: [user1Id], references: [id])
  user2Id String
  user2 User @relation("User2Conversations", fields: [user2Id], references: [id])
  offerId String? @unique // Link to the offer that created this conversation
  offer Offer? @relation(fields: [offerId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  messages Message[]
  
  @@unique([user1Id, user2Id, offerId])
  @@index([user1Id])
  @@index([user2Id])
}

model Message {
  id String @id @default(uuid())
  conversationId String
  conversation Conversation @relation(fields: [conversationId], references: [id])
  senderId String
  sender User @relation(fields: [senderId], references: [id])
  content String
  createdAt DateTime @default(now())

  @@index([conversationId])
  @@index([senderId])
}